{
    "compilerOptions": {
      "outDir": "./app/public/dist/server",
      "module": "commonjs",
      "lib": ["es6","DOM"],
      "target": "es2016",
      "declaration": true,
      "removeComments": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "strict": true,
      "allowJs": true,
      "strictNullChecks": false,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "jsx": "react"
    },
    "include": ["./app/*"]
  }